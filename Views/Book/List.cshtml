@model List<BookListViewModel>

@{
    ViewBag.Title = "Kitap Listesi";
}

<div class="container mt-5">
    <h2 class="mb-4">Kitap Listesi</h2>

    <table class="table table-striped table-bordered table-hover">
        <thead class="thead-dark">
            <tr>
                <th scope="col">Başlık</th>
                <th scope="col">Yazar</th>
                <th scope="col">Tür</th>
                <th scope="col">İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Title</td>
                    <td>@item.AuthorName</td>
                    <td>@item.Genre</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Detaylar</a>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Düzenle</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Sil</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="mt-3">
        <a asp-action="Add" class="btn btn-success">Yeni Kitap Ekle</a>
    </div>
</div>