@model List<AuthorListViewModel>

@{
    ViewBag.Title = "Yazar Listesi";
}

<div class="container mt-5">
    <h2 class="mb-4">Yazar Listesi</h2>

    <table class="table table-striped table-bordered table-hover">
        <thead class="thead-dark">
            <tr>
                <th scope="col">Adı </th>
                <th scope="col">Soyadı</th>
                <th scope="col">Doğum Tarihi</th>
                <th scope="col">Kitap Sayısı</th>
                <th scope="col">İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.FirstName</td>
                    <td>@item.LastName</td>
                    <td>@item.DateOfBirth.ToShortDateString()</td>
                    <td>@item.BookCount</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Detaylar</a>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Düzenle</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Sil</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="mt-3">
        <a asp-action="Add" class="btn btn-success">Yeni Yazar Ekle</a>
    </div>
</div>